<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MyFolio</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="home.css" id="theme-color">
    <link rel="stylesheet" href="register.css" id="theme-color">

</head>
<body>

    <%- include("../views/Partials/nav.ejs")%>


    <section>
        <div class="create-account-form">
            <img src="login.png" class="login-img">
            <form action="/register" method="post">
                <p id="login">Create Account</p>
                <label>Name</label>
                <br>
                <input type="name" name="name" id="name"><br>

                <label>Username</label>
                <br>
                <input type="text" name="username" id="username"><br>

                <label>Email </label>
                <br>
                <input type="email" name="email" id="email"><br>

                <label>Password</label>
                <br>
                <input type="password" name="password" id="password"><br>

                <label>Confirm Password</label>
                <br>
                <input type="password" name="cpassword" id="cpassword"><br><br>
                <button type="submit" id="sign-up">Sign up</button><br><br>
                
            </form>
            </div>
    </section>

    <%- include("../views/Partials/footer.ejs")%>
</body>

<style>
    .login-img{
        height:400px;
    }
</style>
</html>
